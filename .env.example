# =================================
# RENDER DEPLOYMENT - ENVIRONMENT VARIABLES
# =================================

# Node Environment
NODE_ENV=production

# =================================
# FIREBASE CONFIGURATION
# =================================
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin (Server-side)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_service_account_email
FIREBASE_PRIVATE_KEY=your_private_key
FIREBASE_PRIVATE_KEY_ID=your_private_key_id

# =================================
# DATABASE CONFIGURATION
# =================================
# Firebase Realtime Database URL
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your_project-default-rtdb.firebaseio.com

# =================================
# SOCKET.IO & CALLING SYSTEM
# =================================
# Socket URL for production (usually empty for same-origin)
NEXT_PUBLIC_SOCKET_URL=

# =================================
# EXTERNAL SERVICES
# =================================
# Giphy API (if using)
NEXT_PUBLIC_GIPHY_API_KEY=your_giphy_api_key

# Other APIs you might be using
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=your_ga_id

# =================================
# SECURITY & AUTHENTICATION
# =================================
# JWT Secret (if using custom auth)
JWT_SECRET=your_jwt_secret

# Session secret
SESSION_SECRET=your_session_secret

# =================================
# DEPLOYMENT SPECIFIC
# =================================
# Your production domain
NEXT_PUBLIC_APP_URL=https://your-app.onrender.com

# WebRTC STUN/TURN servers (if using custom ones)
NEXT_PUBLIC_STUN_SERVER=stun:stun.l.google.com:19302
NEXT_PUBLIC_TURN_SERVER=
NEXT_PUBLIC_TURN_USERNAME=
NEXT_PUBLIC_TURN_PASSWORD=