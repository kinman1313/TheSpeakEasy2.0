{
    "hosting": {
        "source": ".",
        "public": "out",
        "ignore": [ "firebase.json", "**/.*", "**/node_modules/**" ],
        "cleanUrls": true,
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "/service-worker.js",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache"
                    }
                ]
            }
        ]
    }
}

